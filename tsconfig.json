{
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": [
            "es6",
        ],
        "target": "es6",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}